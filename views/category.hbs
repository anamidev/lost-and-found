
<h2>Категория:{{currentCategory}}</h2>
<div class="post">
{{#each categoryPosts}}
<div class="card" style="width: 25rem;">
  <a href="/post/{{this.id}}">
    {{#if this.photo}}
    <img src="{{this.photo}}" class="card-img-top" alt="photo">
    {{/if}}
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.description}}</p>
    </div>
  </a>
</div>
{{/each}}
</div>
